from xlrd import *

drago = open_workbook('DR404.xls',on_demand=True)
stran_drago=drago.sheet_by_name('List1')

kilometri = stran_drago.cell_value(2,4)
print(kilometri)

marjan = open_workbook('MAR404.xls',on_demand=True)
